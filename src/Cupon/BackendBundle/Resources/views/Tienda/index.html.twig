{% extends '::backend.html.twig' %}

{% block id 'tienda' %}
{% block title %}Listado de tiendas{% endblock %}

{% block article %}
<h1>{{ block('title') }}</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Slug</th>
            <th>Login</th>
            <th>Direccion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('backend_tienda_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.login }}</td>
            <td>{{ entity.direccion }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('backend_tienda_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_tienda_edit', { 'id': entity.id }) }}">Modificar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('backend_tienda_new') }}">
            Crear nueva tienda
        </a>
    </li>
</ul>
{% endblock %}